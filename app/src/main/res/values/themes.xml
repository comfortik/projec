<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight">
        <item name="android:background">@color/black</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#A6E3B5D8</item>
        <item name="android:windowBackground">#CFD8DC</item>
        <item name="android:navigationBarColor">#90A4AE</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:textColorPrimary">@color/black</item><!-- Цвет кнопок -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="recyclerViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="Theme.Project.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Project.AppWidgetContainer" parent="Theme.Project.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

