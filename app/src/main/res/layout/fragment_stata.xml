<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="12dp"
    tools:context=".Stata.StataFragment">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barChartWeek"/>

        <com.github.mikephil.charting.charts.BarChart
            app:layout_constraintTop_toBottomOf="@id/barChart"
            android:id="@+id/barChartWeek"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/barChartMounth"
            android:layout_height="0dp"
            android:layout_marginVertical="12dp"
            />
        <com.github.mikephil.charting.charts.LineChart
            app:layout_constraintTop_toBottomOf="@id/barChartWeek"
            android:id="@+id/barChartMounth"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            android:layout_marginVertical="12dp"
            />






</androidx.constraintlayout.widget.ConstraintLayout>